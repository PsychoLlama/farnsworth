{
  "name": "farnsworth",
  "version": "0.1.0",
  "type": "module",
  "source": "src/index.html",
  "description": "A peer-to-peer video conferencing application.",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "start": "concurrently 'yarn -s start:web' 'yarn -s start:server'",
    "start:web": "parcel",
    "start:server": "DEBUG=farnsworth node server",
    "build": "parcel build",
    "test": "./bin/run-tests",
    "test:unit": "jest --color",
    "test:lint": "eslint --color src server",
    "test:fmt": "prettier --check --color src server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": [
      "eslint",
      "prettier --check"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "overrides": [
      {
        "files": [
          "./**/__tests__/*.ts{x,}"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      },
      {
        "files": [
          "./server/**/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-prototype-builtins": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./src/testing/setup.tsx"
    ]
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions",
    "last 2 edge versions"
  ],
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/enzyme": "3.10.10",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "27.0.3",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/react-redux": "7.1.20",
    "@types/styled-components": "5.1.18",
    "@types/uuid": "8.3.3",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "@zxing/text-encoding": "0.9.0",
    "concurrently": "6.4.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "eslint": "8.4.1",
    "eslint-plugin-react": "7.27.1",
    "husky": "7.0.4",
    "immer": "9.0.7",
    "jest": "27.4.4",
    "lint-staged": "12.1.2",
    "parcel": "2.0.1",
    "prettier": "2.5.1",
    "ts-jest": "27.1.1",
    "typescript": "4.5.3"
  },
  "dependencies": {
    "@msgpack/msgpack": "2.7.1",
    "debug": "4.3.3",
    "it-pipe": "1.1.0",
    "libp2p": "0.35.2",
    "libp2p-mplex": "0.10.5",
    "libp2p-noise": "4.0.0",
    "libp2p-websockets": "0.16.2",
    "localforage": "1.10.0",
    "media-devices": "0.3.0",
    "multiaddr": "10.0.1",
    "peer-id": "0.16.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "4.3.1",
    "react-redux": "7.2.6",
    "redux": "4.1.2",
    "retreon": "0.7.0",
    "styled-components": "5.3.3",
    "uuid": "8.3.2"
  }
}

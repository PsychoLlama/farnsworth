{
  "name": "farnsworth",
  "version": "0.1.0",
  "description": "A peer-to-peer video conferencing application.",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "test": "./bin/run-tests",
    "test:unit": "jest --color",
    "test:lint": "eslint --color src",
    "test:fmt": "prettier --check --color src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": [
      "eslint",
      "prettier --check"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "overrides": [
      {
        "files": [
          "./**/__tests__/*.ts{x,}"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./src/testing/setup.tsx"
    ]
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions",
    "last 2 edge versions"
  ],
  "devDependencies": {
    "@parcel/optimizer-htmlnano": "2.0.0-nightly.612",
    "@parcel/packager-html": "2.0.0-nightly.612",
    "@parcel/transformer-html": "2.0.0-nightly.612",
    "@parcel/transformer-posthtml": "2.0.0-nightly.612",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/invariant": "^2.2.34",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/styled-components": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@zxing/text-encoding": "^0.9.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.20.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.0.9",
    "immer": "^8.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "parcel": "^2.0.0-rc.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "debug": "^4.3.2",
    "freeform-input": "^0.2.0",
    "invariant": "^2.2.4",
    "it-pipe": "^1.1.0",
    "libp2p": "^0.30.9",
    "libp2p-mplex": "^0.10.2",
    "libp2p-noise": "^2.0.5",
    "libp2p-websockets": "^0.15.3",
    "media-devices": "^0.2.0",
    "multiaddr": "^10.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "reselect": "^4.0.0",
    "retreon": "^0.7.0",
    "styled-components": "^5.2.1",
    "uuid": "^8.3.2"
  }
}

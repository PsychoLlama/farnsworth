{
  "name": "farnsworth",
  "version": "0.1.0",
  "description": "A peer-to-peer video conferencing application.",
  "main": "public/index.html",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "start": "parcel src/index.html",
    "test": "./bin/run-tests",
    "test:unit": "jest",
    "test:lint": "eslint --color src",
    "test:fmt": "prettier --check --color src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": [
      "eslint",
      "prettier --check"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "overrides": [
      {
        "files": [
          "./**/__tests__/*.ts{x,}"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "./src/setup-tests.tsx"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/styled-components": "^5.1.7",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.20.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "retreon": "^0.6.1",
    "styled-components": "^5.2.1"
  }
}

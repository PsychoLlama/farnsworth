{
  "name": "rename-me",
  "version": "0.1.0",
  "description": "A peer-to-peer video conferencing application.",
  "main": "public/index.html",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "start": "parcel src/index.html",
    "test": "./bin/run-tests",
    "test:unit": "jest",
    "test:lint": "eslint --color src",
    "test:fmt": "prettier --check --color src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --check"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "./**/__tests__/*.js"
        ],
        "env": {
          "jest": true,
          "jsx": true
        }
      }
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
